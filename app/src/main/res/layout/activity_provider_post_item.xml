<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderPostItemActivity">


    <TextView
        android:id="@+id/productTypeProviderPostItem"
        android:layout_width="272dp"
        android:layout_height="39dp"
        android:text="Product type"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/dateOfAvailabilityProviderPostItem"
        android:layout_width="272dp"
        android:layout_height="39dp"
        android:text="Date of availability: yyyy-MM-dd"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/descriptionProviderPostItem"
        android:layout_width="266dp"
        android:layout_height="72dp"
        android:text="Product description"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="241dp" />

    <TextView
        android:id="@+id/placeOfExchangeProviderPostItem"
        android:layout_width="272dp"
        android:layout_height="39dp"
        android:text="Place of exchange"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="346dp" />

    <TextView
        android:id="@+id/preferredExchangesInReturnProviderPostItem"
        android:layout_width="272dp"
        android:layout_height="39dp"
        android:text="Preferred item in return"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="470dp" />

    <TextView
        android:id="@+id/errorMessageProviderProductAdd"
        android:layout_width="272dp"
        android:layout_height="39dp"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="624dp" />

    <TextView
        android:id="@+id/approximateMarketValueProviderPostItem"
        android:layout_width="272dp"
        android:layout_height="39dp"
        android:text="Approximate market value"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="401dp" />

    <Button
        android:id="@+id/providerSubmitPostProvider"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:text="Submit Item"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="533dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="266dp"
        android:layout_height="28dp"
        android:text="product name"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="71dp" />

</androidx.constraintlayout.widget.ConstraintLayout>